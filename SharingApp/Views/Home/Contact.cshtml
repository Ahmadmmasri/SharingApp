@model SharingApp.Models.ContactViewModel
<!-- Start main content -->
    <!-- Start Contact -->
@if (TempData["Message"] != null) { 
    <div class="alert alert-success">
        <strong>@TempData["Message"]</strong>
    </div>
}
    <section id="mu-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-contact-area">
                        <!-- Title -->
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mu-title">
                                    <h2>Say Hello!</h2>
                                    <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa cum sociis.</p>
                                </div>
                            </div>
                        </div>
                        <!-- Start Contact Content -->
                        <div class="mu-contact-content">
                            <div class="row">

                                <div class="col-md-12">
                                    <div class="mu-contact-form-area">
                                        <div id="form-messages"></div>
                                        <form method="post" asp-action="Contact" asp-controller="Home" class="mu-contact-form">

                                            <div class="form-group">
                                                <span class="fa fa-user mu-contact-icon"></span>
                                                <input type="text" asp-for="Name" class="form-control" placeholder="Name" id="name" name="Name" required>
                                                <span asp-validation-for="Name" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <span class="fa fa-envelope mu-contact-icon"></span>
                                                <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" id="email" name="Email" required>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <span class="fa fa-folder-open-o mu-contact-icon"></span>
                                                <input type="text" asp-for="Subject" class="form-control" placeholder="Your Subject" id="subject" name="Subject" required>
                                                <span asp-validation-for="Subject" class="text-danger"></span>
                                            </div>

                                            <div class="form-group">
                                                <span class="fa fa-pencil-square-o mu-contact-icon"></span>
                                                <textarea class="form-control" asp-for="Message" placeholder="Message" id="message" name="Message" required></textarea>
                                                <span asp-validation-for="Message" class="text-danger"></span>
                                            </div>
                                            <button type="submit" class="mu-send-msg-btn"><span>Send Message</span></button>
                                        </form>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- End Contact Content -->
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End Contact -->
    <!-- Google map -->
    <div id="mu-google-map" class="mb-2">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3508.8176744277202!2d-81.47150788457147!3d28.424757900613237!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88e77e378ec5a9a9%3A0x2feec9271ed22c5b!2sOrange+County+Convention+Center!5e0!3m2!1sen!2sbd!4v1503833952781" width="850" height="400" allowfullscreen></iframe>
    </div>



<!-- End main content -->	