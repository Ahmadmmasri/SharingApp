    @model SharingApp.Models.LoginViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Login"];
}


<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localizer["Login"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form method="post" asp-action="Login" asp-controller="Account" asp-route-ReturnUrl="@Context.Request.Query["ReturnUrl"]">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="email" asp-for="Email" class="form-control" placeholder="@Localizer["PlaceHolderEmail"] " id="Email" required>
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-lock mu-contact-icon"></span>
                                            <input type="password" asp-for="Password" class="form-control" placeholder="@Localizer["PlaceHolderPass"]" id="pass" required>
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <button type="submit" class="mu-send-msg-btn"><span>@Localizer["Login"]</span></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <a asp-controller="Account" asp-action="ForgetPassword">@Localizer["ForgetPass"]</a>
                        </div>
                        <br />
                        <div style="margin-left: -8%;">
                            <div class="row mt-2">
                                <div class="col-md-5">
                                    <a class="btn btn-outline-danger p-3" asp-action="ExternalLogin" asp-route-provider="Google" asp-controller="Account">
                                        <span class="fa fa-google"> Sign in by Google</span>
                                    </a>
                                </div>
                                <div class="col-md-5">
                                    <a class="btn btn-outline-primary p-3" asp-action="ExternalLogin" asp-route-provider="Facebook" asp-controller="Account">
                                        <span class="fa fa-facebook"> Sign in by Facebook</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
