@model SharingApp.Models.RestPasswordViewModel
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["ResetPass"];
}


<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@Localizer["ResetPass"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div class="mu-contact-content">
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form method="post" asp-action="ResetPassword" asp-controller="Account">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="@Localizer["PlaceHolderNewPass"]"  required>
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <span class="fa fa-envelope mu-contact-icon"></span>
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@Localizer["PlaceHolderConfirmPass"]" required>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <input type="hidden" asp-for="Email" class="form-control" value="@Context.Request.Query["Email"]">
                                        <input type="hidden" asp-for="Token" class="form-control" value="@Context.Request.Query["Token"]">
                                        <br />
                                        <button type="submit" class="mu-send-msg-btn" asp-controller="Account" asp-action="ResetPassword"><span>@Localizer["ResetButt"]</span></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                        </div>
                        <br />
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
