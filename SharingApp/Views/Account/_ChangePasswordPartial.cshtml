@model SharingApp.Models.ChangePasswordViewModel
@inject IViewLocalizer locaizer


@if (TempData["Success"] != null)
{
    <div class="alert alert-success text-center">
        <strong>@TempData["Success"]</strong>
    </div>
}
<section id="mu-contact">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="mu-contact-area">
                    <!-- Title -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mu-title">
                                <h2>@locaizer["ChangePass"]</h2>
                            </div>
                        </div>
                    </div>
                    <!-- Start Contact Content -->
                    <div>
                        <div class="row">

                            <div class="col-md-12">
                                <div class="mu-contact-form-area">
                                    <div id="form-messages"></div>
                                    <form method="post" asp-action="ChangePassword" asp-controller="Account">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                        <div class="form-group">
                                            <span class="fa fa-pencil mu-contact-icon"> @locaizer["CurrentPassLabel"]</span>
                                            <input type="password" asp-for="CurrentPassword" class="form-control" placeholder="@locaizer["PlaceHolderCurrentPass"]" id="Email" required>
                                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-lock mu-contact-icon"> @locaizer["NewPassLabel"]</span>
                                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="@locaizer["PlaceHolderNewPass"]" id="Email" required>
                                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <span class="fa fa-lock mu-contact-icon"> @locaizer["ConfirmPassLabel"]</span>
                                            <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="@locaizer["PlaceHolderConfirmPass"]" id="Email" required>
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        <button type="submit" class="mu-send-msg-btn"><span>@locaizer["CofirmBtn"]</span></button>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                    <!-- End Contact Content -->
                </div>
            </div>
        </div>
    </div>
</section>