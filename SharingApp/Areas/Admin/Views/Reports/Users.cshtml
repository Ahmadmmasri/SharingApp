@model IEnumerable<SharingApp.Areas.Admin.Models.AdminUserViewModel>
@{ 
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Admin/dist/css/adminlte.min.css">

    <title>@ViewBag.Title</title>
</head>
<body>
    <div>
        <div class="row d-flex align-items-stretch">
            @foreach (var item in Model)
            {
            <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch flex-column">
                <div class="card bg-light d-flex flex-fill" style="width:100%">
                    <div class="card-header text-muted border-bottom-0">
                        Users
                    </div>
                    <div class="card-body pt-0">
                        <div class="row">
                            <div class="col-7">
                                <h2 class="lead"><b>Name: @item.FirstName @item.LastName</b></h2>
                                <p class="text-muted text-sm"><b class="fas fa-lg fa-battle-net">Email: </b>@item.Email </p>
                                <ul class="ml-4 mb-0 fa-ul text-muted">
                                    <li class="small">
                                        <span class="fa-li"><i class="fas fa-lg fa-calendar"></i></span><strong>Created Date:</strong>
                                        <span class="moment-date"> @item.CreatedDate.ToString("yyyy-MM-dd hh:mm", new System.Globalization.CultureInfo("en-US"))</span>
                                    </li>
                                </ul>
                            </div>
                            <div class="col-5 text-center" style="float:right">
                                <img style="float:right" src="/Admin/dist/img/user2-160x160.jpg" alt="user-avatar" class="img-circle img-fluid">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">

                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</body>
</html>
